<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uol.poc.brunosantos.pocuol">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.LauncherScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".feed.main.FeedMainActivity" />
        <activity android:name=".feed.detail.FeedDetailActivity"></activity>

        <provider
            android:exported="false"
            android:authorities="com.uol.poc.brunosantos.pocuol"
            android:name=".feed.repository.local.FeedProvider"/>
    </application>

</manifest>