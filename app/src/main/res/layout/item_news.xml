<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    android:clickable="true"
    android:transitionName="@string/transition_detail"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_marginTop="@dimen/item_default_padding"
        android:layout_marginBottom="@dimen/item_default_padding"
        android:layout_marginLeft="@dimen/item_default_padding"
        android:layout_marginStart="@dimen/item_default_padding"
        android:layout_marginRight="@dimen/item_default_padding"
        android:layout_marginEnd="@dimen/item_default_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_thumb"
            android:layout_width="@dimen/thumb_width"
            android:layout_height="@dimen/thumb_height"
            android:layout_marginRight="@dimen/item_default_padding"
            android:layout_marginEnd="@dimen/item_default_padding"

            tools:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_toRightOf="@+id/iv_thumb"
            android:layout_toEndOf="@+id/iv_thumb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Coritiba anuncia chegada do zagueiro Alex Alves, que estava no GoiÃ¡s"/>

        <TextView
            android:id="@+id/tv_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_thumb"
            android:layout_toEndOf="@+id/iv_thumb"
            android:layout_alignBottom="@+id/iv_thumb"
            tools:text="28/01"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>